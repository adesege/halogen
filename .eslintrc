{
  "root": true,
  "extends": [ "airbnb-base", "react" ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "indent": ["error", 2],
    "prefer-reflect": 0,
    "max-len": [1, 80, 2],
    "one-var": 0,
    "class-methods-use-this": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": [2, { "commonjs": true }],
    "no-shadow": ["error", { "allow": ["req", "res", "err"] }]
      }
    }